		<script type="text/javascript">
	 
	 function checkPointDone(checkPointId)
	 {
		$.ajax({
			type:'POST',
			url:"<?php echo Yii::app()->createAbsoluteUrl("/goal/checkPointDone"); ?>",
			data:{id:checkPointId, goalId:'<?php echo $model->id ?>'},
			success: function(data){
				if(data)
				{
					alert("Done----");
				}else{
					alert("Not Done-----");
				}
			}
		
		});
	 }
